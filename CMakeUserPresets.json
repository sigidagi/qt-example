{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19
    },
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "${sourceDir}/build/default",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "qt-default",
            "inherits": "default",
            "hidden": true,
            "cacheVariables": {
                "QT_USE": "TRUE",
                "QT_VERSION_MAJOR": "5"
            },
            "environment": {
                "QT_DIR": "$env{Qt5_DIR}"
            }
        },
        {
            "name": "linux-qt-default",
            "inherits": "qt-default",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_FIND_ROOT_PATH": "$env{QT_DIR}/gcc_64"
            },
            "environment": {
                "CMAKE_PREFIX_PATH": "$env{QT_DIR}/gcc_64/lib/cmake"
            }
        },
        {
            "name": "mac-qt-default",
            "inherits": "qt-default",
            "hidden": true,
            "cacheVariables": {
                "IOS": "TRUE",
                "CMAKE_FIND_ROOT_PATH": "$env{QT_DIR}/clang_64"
            },
            "environment": {
                "CMAKE_PREFIX_PATH": "$env{QT_DIR}/clang_64/lib/cmake"
            }
        },
        {
            "name": "x86_64-linux-qt-zig",
            "inherits": "linux-qt-default",
            "binaryDir": "${sourceDir}/build/linux",
            "cacheVariables": {
                "CPU_ARCH": "x86_64",
                "MACHINE": "linux",
                "CLIB": "gnu",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/zig-toolchain.cmake"
            }
        },
        {
            "name": "x86_64-macos-qt-zig",
            "inherits": "mac-qt-default",
            "binaryDir": "${sourceDir}/build/mac-qt-zig",
            "cacheVariables": {
                "CPU_ARCH": "x86_64",
                "MACHINE": "macos",
                "CLIB": "none",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/zig-toolchain.cmake"
            }
        },
        {
            "name": "x86_64-macos-qt-darwin",
            "inherits": "mac-qt-default",
            "binaryDir": "${sourceDir}/build/mac-qt-darwin",
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "x86_64",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/mac-toolchain.cmake"
            }
        },
        {
            "name": "x86_64-macos-none-zig",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/mac-none-zig",
            "cacheVariables": {
                "CPU_ARCH": "x86_64",
                "MACHINE": "macos",
                "CLIB": "none",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/zig-toolchain.cmake"
            }
        },
        {
            "name": "aarch64-linux-musl-zig",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build/musl-zig",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CPU_ARCH": "aarch64",
                "MACHINE": "linux",
                "CLIB": "musl",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/cmake/zig-toolchain.cmake"
            }
        }
    ]
}
